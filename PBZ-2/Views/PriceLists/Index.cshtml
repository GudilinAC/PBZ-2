@model IEnumerable<PBZ_2.Models.PriceList>

@{
    ViewData["Title"] = "Prise lists";
}

<h2>Prise lists</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Product</strong>
            </th>
            <th>
                <strong>Price</strong>
            </th>
            <th>
                <strong>Date</strong>
            </th>
            <th>
                <strong>Company</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Product.Name
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Date
            </td>
            <td>
                @item.Company.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
